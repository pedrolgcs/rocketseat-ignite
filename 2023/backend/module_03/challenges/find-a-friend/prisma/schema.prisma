generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id            String   @id @default(uuid())
  name          String
  email         String   @unique
  cep           String
  state         String
  city          String
  address       String
  latitude      Decimal
  longitude     Decimal
  phone         String
  password_hash String
  pets          Pet[]
  created_at    DateTime @default(now())

  @@map("organizations")
}

model Pet {
  id                   String                @id @default(uuid())
  name                 String
  about                String
  category             String
  age                  String
  size                 String
  energy_level         String
  independence_level   String
  place                String
  organization_id      String
  organization         Organization          @relation(fields: [organization_id], references: [id], onDelete: Cascade)
  petImages            PetImage[]
  adoptionRequirements AdoptionRequirement[]
  created_at           DateTime              @default(now())

  @@map("pets")
}

model AdoptionRequirement {
  id          String @id @default(uuid())
  requirement String
  pet_id      String
  pet         Pet    @relation(fields: [pet_id], references: [id], onDelete: Cascade)

  @@map("adoption_requirements")
}

model PetImage {
  id        String @id @default(uuid())
  image_url String
  pet_id    String
  pet       Pet    @relation(fields: [pet_id], references: [id], onDelete: Cascade)

  @@map("pets_image")
}
