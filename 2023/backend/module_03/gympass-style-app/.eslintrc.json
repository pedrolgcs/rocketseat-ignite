{
  "extends": ["@rocketseat/eslint-config/node"],
  "plugins": ["eslint-plugin-import-helpers"],
  "rules": {
    "camelcase": "off",
    "no-undef": "off",
    "no-useless-constructor": "off",
    "import-helpers/order-imports": [
      "warn",
      {
        "newlinesBetween": "never",
        "groups": [
          "/^node:/",
          "module",
          "/^@[a-z]/",
          "/^@/",
          ["parent", "sibling", "index"]
        ],
        "alphabetize": {
          "order": "asc",
          "ignoreCase": true
        }
      }
    ]
  }
}
